<p style="color: green"><%= notice %></p>
<%= render @image %>

<div class="col-lg-6">
  <%= link_to "Edit this image", edit_image_path(@image) %> |
  <%= link_to "Back to images", images_path %> |
  <%= link_to "Destroy this image", @image, method: :delete, data: { confirm: "Are you sure" } %>
</div>

<p style="color: green"><%= notice %></p>
<div class="row">
  <div class="col-lg-6">
    <div class="card shadow" style="width: 30rem;">
      <div class="card-body">
        <div class="row">
          <div>
            <strong>Note:</strong>
            <%= render "notes/form", notable: @image %>
          </div>
          </div>
      </div>
    </div>
  </div>
</div

<div>
  <%= render "notes/notes", notable: @image %> 
</div>

<%= link_to "New Note", new_image_note_path(@image), data: { bs_toggle: "modal", bs_target: "#newNoteModal", remote: true }  %>

<!-- New Modal -->
<div class="modal fade" id="newNoteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
       <div id="newNoteForm">
          
       </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>



