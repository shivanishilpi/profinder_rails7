<p style="color: green"><%= notice %></p>
<table class="table">
  <thead>
    <tr>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Full Name</th>
      <th scope="col">Edit</th>
      <th scope="col">Show</th>
      <th scope="col">Destroy</th>
    </tr>
  </thead>
  <tbody>
  <% @pationts.each do |pationt| %>
    <tr>
    <% presenter = PationtPresenter.new(pationt) %> 
      <td><%= pationt.name %></td>
      <td><%= pationt.last_name %></td>
      <td><%= presenter.full_name %></td>
      <td><%= link_to "Edit", edit_pationt_path(pationt) %></td>
      <td><%= link_to "Show", pationt_path(pationt) %></td>
      <td><%= link_to "Destroy", pationt, data: { turbo_confirm: "Are you sure you want to delete this user", turbo_method: :delete } %></td>
    </tr>
  <% end %>  
  </tbody>
</table>

<%= link_to "New pationt", new_pationt_path %>
