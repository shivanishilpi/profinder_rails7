<p>Posts details</p>
<thead>
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>
</thead>
<tbody>
   <% @posts.each do |post| %>
    <tr>
        <td><%= post.title %><td>
        <td><%= post.content %><td>
        <td><%= link_to "edit", edit_post_path(post) %></td>
        <td><%= link_to "show", post_path(post) %></td>
        <td><%= link_to "delete", post, data: { turbo_confirm: "Are you sure you want to delete this user", turbo_method: :delete } %>
    </tr>
   <% end %>
</tbody>

<%= link_to 'new', new_post_path %>