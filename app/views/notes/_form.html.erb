<%= form_with model: [@plant, @plant.notes.build] do |f| %>
   <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
   </div>

   <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: "form-control" %>
   </div>

   <div class="form-group">
     <%= f.submit %>
   </div>
<% end %>