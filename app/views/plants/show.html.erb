<p style="color: green"><%= notice %></p>
<div class="row">
  <div class="col-lg-6">
    <div class="card shadow" style="width: 30rem;">
      <div class="card-body">
        <div class="row">
          <div class="col-sm-2">
            <%= image_tag @plant.image, class: "img-fluid", style:"width:100px; height:100px;" if @plant.image.attached? %>
          </div>
          <div class="col-sm-4">
            <p>
              <strong>Name:</strong>
              <%= @plant.name %>
            </p>
            <p>
              <strong>Price:</strong>
              <%= @plant.price %>
            </p>
          </div>
          <div class="col-lg-4">
            <%= link_to "Edit this plant", edit_plant_path(@plant), class: "btn btn-warning mt-2" %>
            <%= link_to "Back to plants", plants_path, class: "btn btn-primary mt-2" %>
          </div>
        </div>
      </div>
    </div> 
  </div>
  <%= link_to "New Note", new_plant_note_path(@plant), data: { bs_toggle: "modal", bs_target: "#newNoteModal", remote: true }  %>

